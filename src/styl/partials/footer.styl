.footer
  align-items center
  bottom 0
  display flex
  flex-direction column
  height 360px
  justify-content center
  position absolute
  width 100%

  &-logo
    height 14px
    width 230px

  &-section
    color $whiteT1
    font-size $fs9
    letter-spacing 6.6px
    text-transform uppercase

    &-container
      margin 30px 0 15px 0

      & a
        margin 0 15px

  &-privacy,
  &-copyright
    color $whiteT1
    font-size $fs10
    letter-spacing 1px

  &-copyright
    margin-top 5px
