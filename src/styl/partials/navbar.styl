.nav
  align-items center
  background-color transparent
  display flex
  height 102px
  justify-content center
  left 0
  padding 0 40px
  position fixed
  top 0
  width 100%
  z-index 12

  &-logo
    height 14px
    width 230px

  &-scroll
    align-items center
    background-color green
    box-shadow 0 6px 8px 0 rgba(0,0,0,0.2)
    height 100px

  &-option
    color black

    &:hover:before,
    &.active-section:before
      background-color white
      bottom -8px
      content ""
      height 3px
      position absolute
      width 100%

    &:hover
      color white

    &-container
      display flex
      flex-direction row

    &-content
      margin-left 20px
      position relative

  &-hamburger
    &-text
      color $whiteT1
      font-size $fs10
      letter-spacing 3.6px
      margin-left 12px
      text-transform uppercase

.hamburger
  &-visibility
    align-items center
    bottom 0
    cursor pointer
    display flex
    height 14px
    margin auto 0
    position absolute
    right 76px
    top 0

  &-menu
    &-container
      display none

.active-section
  color white

