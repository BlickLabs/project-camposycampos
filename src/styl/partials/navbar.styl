  .hamburger
    background-color transparent
    display flex
    height 33px
    justify-content center
    width 33px

    // &-visibility
    //   cursor pointer
    //   position initial

    &-logo
      height 20px
      width 94px

    &-close
      height 16px
      width 16px

    &-menu
      &-container
        background-color $blueT1
        background-image url("/img/backgrounds/hamburger-bg.png")
        background-position top
        background-repeat no-repeat
        background-size contain
        display inline
        bottom 0
        overflow hidden
        padding-bottom 50px
        position fixed
        right 0
        top 0
        -webkit-transition width 0.5s
        transition width 0.5s
        width 0%
        z-index 13

      &-header
        align-items center
        display flex
        flex-direction row
        justify-content space-between
        padding 22px 36px 50px 36px

      &-body
        margin-left 36px

    &-text
      color $whiteT1
      font-size $fs29
      display block
      letter-spacing 8.1px
      margin 5px 0
      padding 5px 0
      text-transform uppercase

      &-container
        display flex
        flex-direction column
        margin 35px 0

    &-active,
    &-text:hover
      color $grayT1
      font-weight bold

    &-line
      &-icon
        background-color #fff
        height 1px
        width 13px

        &-container
          display flex
          flex-direction column
          justify-content center

        &:nth-child(2)
          margin 4px 0
